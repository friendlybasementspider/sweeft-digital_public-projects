INSERT INTO TeacherPupilRelationship (TeacherID, PupilID)
SELECT
    t.TeacherID,
    p.PupilID
FROM
    Teachers t
JOIN
    Pupils p
ON
    t.Class = p.Class;

SELECT DISTINCT
    t.FirstName AS TeacherFirstName,
    t.LastName AS TeacherLastName
FROM
    Teachers t
JOIN
    TeacherPupilRelationship r
ON
    t.TeacherID = r.TeacherID
JOIN
    Pupils p
ON
    r.PupilID = p.PupilID
WHERE
    p.FirstName = 'giorgi';
