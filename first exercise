using System;

namespace WuteV
{
    public class Program
    {
        static void Main(string[] args)  
        {  
            string input, revinput = string.Empty;  
            Console.Write("Enter a string : ");  
            input = Console.ReadLine();  
            if (input != null)  
            {  
                for (int i = input.Length - 1; i >= 0; i--) revinput += input[i].ToString();
                if (revinput == input) Console.WriteLine($"String is Palindrome Input = {input} and Output= {revinput}");   
                else Console.WriteLine($"String is not Palindrome Input = {input} and Output= {revinput}"); 
            }
            Console.ReadLine();
        } 
    }
}
